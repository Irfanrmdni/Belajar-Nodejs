<div class="container mt-3">
    <div class="row">
        <div class="col-md-10">
            <h2>Detail Contact</h2>

            <% if (!contact) { %>
            <div class="alert alert-danger fw-bold" role="alert">
                data contact yang anda cari tidak ditemukan!
            </div>
            <% } else { %>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nama</th>
                        <th scope="col">Nomor HP</th>
                        <th scope="col">Email</th>
                        <th scope="col">Website</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="table-success">
                        <td><%= contact.nama %> </td>
                        <td><%= contact.nohp %> </td>
                        <td><%= contact.email %> </td>
                        <td><%= contact.website %> </td>
                        <td>
                            <a href="/contact/update/<%= contact.nama %>" class="btn btn-success badge rounded-pill">
                                <i class="bi bi-gear"></i>
                                Update
                            </a>
                        </td>

                        <td>
                            <a style="margin-left: -20px;" href="/contact/delete/<%= contact.nama %>"
                                class="btn btn-danger badge rounded-pill">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <% } %>

            <a href="/contact" class="fw-bold text-decoration-none"><i class="bi bi-arrow-left"></i> kembali ke daftar
                contact</a>
        </div>
    </div>
</div>