<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h1 class="text-capitalize">Form update data contact</h1>

            <form class="mt-3" method="post" action="/contact?_method=PUT">
                <% if (typeof errors != 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(err => { %>
                        <li><%= err.msg %> </li>
                        <% }) %>
                    </ul>
                </div>
                <% } %>
                <input type="hidden" name="_id" value="<%=contact._id%>">

                <input type="hidden" name="oldNama"
                    value="<%=(contact.oldNama)?contact.oldNama.trim() : contact.nama.trim()%>">

                <div class="mb-3">
                    <label for="nama" class="form-label">Nama</label>
                    <input type="text" class="form-control" id="nama" name="nama" placeholder="example:  irfan ramdani"
                        value="<%= contact.nama %>" required />
                </div>
                <div class="mb-3">
                    <label for="nohp" class="form-label">Nomor HP</label>
                    <input type="text" class="form-control" id="nohp" name="nohp" placeholder="example:  089677451818"
                        value="<%= contact.nohp %>" required />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email"
                        placeholder="example:  irfanrmdni@gmail.com" value="<%= contact.email %>" required />
                </div>
                <div class="mb-3">
                    <label for="alamat" class="form-label">Alamat</label>
                    <input type="text" class="form-control" id="alamat" name="alamat" placeholder="example:  cijerokaso"
                        value="<%= contact.alamat %>" required />
                </div>

                <a href="/contact" class="btn btn-secondary" style="margin-right: 10px;">Cancel</a>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>